{
  "source": ["./properties/**/*.json"],

  "platforms": {

    "ReactNative": {
      "transforms": [
        "attribute/cti",
        "name/i/objectKey"
      ],
      "buildPath": "./dist/js/",
      "files": [{
        "filter": "isColor",
        "destination": "reactNative.js",
        "format": "javascript/reactNativeColors"
      }]
    },

    "SketchPalette": {
      "transforms": [
        "attribute/cti"
      ],
      "buildPath": "./dist/sketch/",
      "files": [{
        "destination": "cbi.sketchpalette",
        "format": "sketch/palette"
      }]
    },

    "CssCustomProperties": {
      "transforms": [
        "attribute/cti",
        "name/custom/kebab",
        "color/css"
      ],
      "buildPath": "./dist/css/",
      "files": [{
        "destination": "customProperties.css",
        "format": "css/variables"
      }]
    },

    "CssCustomMedia": {
      "transforms": [
        "attribute/cti",
        "name/custom/kebab"
      ],
      "buildPath": "./dist/css/",
      "files": [{
        "filter": "isCustomMedia",
        "destination": "customMedia.css",
        "format": "css/customMedia"
      }]
    },

    "JSCustomProperties": {
      "transforms": [
        "attribute/cti",
        "name/custom/kebab",
        "color/css"
      ],
      "buildPath": "./dist/js/",
      "files": [{
        "destination": "cssCustomProperties.js",
        "format": "js/customProperties"
      }]
    },

    "JSConstants": {
      "transforms": [
        "attribute/cti",
        "name/custom/constant",
        "color/css"
      ],
      "buildPath": "./dist/js/",
      "files": [{
        "destination": "styleConstants.js",
        "format": "javascript/commonJs"
      }]
    },

    "MaterialUIColors": {
      "transforms": [
        "attribute/cti",
        "attribute/materialPalette",
        "name/item"
      ],
      "buildPath": "./dist/js/",
      "files": [{
        "filter": "isColor",
        "destination": "materialPalette.js",
        "format": "javascript/materialPalette"
      }]
    },

    "docs": {
      "transforms": [
        "attribute/cti",
        "attribute/color",
        "attribute/materialPalette",
        "attribute/varNames",
        "color/css"
      ],
      "buildPath": "../../docs/fds-dictionary/",
      "files": [{
        "destination": "index.html",
        "format": "html/doc"
      }],
      "actions": ["doc_assets"]
    }

  }
}
