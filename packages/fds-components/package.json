{
  "name": "fds-components",
  "version": "1.19.1",
  "description": "Form Design System React components",
  "author": "CB Insights",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "scripts": {
    "setupLib": "mkdir -p ./lib",
    "compile:jsx": "babel src --out-dir lib --ignore test.jsx --source-maps",
    "compile:css": "postcss src/style/index.css -o lib/style/fds-components.css --config=./postcss.config.js",
    "compile:docs": "styleguidist build",
    "build": "yarn setupLib && yarn compile:css && yarn compile:jsx && yarn compile:docs",
    "test": "jest --color --config jest.config.json",
    "serve": "npx styleguidist server"
  },
  "dependencies": {
    "@material-ui/core": "^3.4.0",
    "classnames": "^2",
    "fds-styles": "^1.19.1",
    "prop-types": "^15"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cbinsights/form-design-system.git"
  },
  "gitHead": "df53ab32b610d14ec96e0a16902deff219746f5a"
}
