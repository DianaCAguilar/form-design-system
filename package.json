{
  "name": "form-design-system",
  "description": "Form: A design system by CB Insights",
  "author": "CB Insights",
  "license": "MIT",
  "scripts": {
    "build": "echo lol nope not yet",
    "build:bootstrap": "./scripts/bash/bootstrapBuild.sh",
    "build:dictionary": "yarn build:bootstrap && node scripts/node/dictionary/build.js",
    "build:styles": "yarn build:bootstrap && yarn styles:min && yarn styles:full && yarn styles:docs",
    "build:comp": "yarn build:bootstrap && yarn comp:css && yarn comp:jsx && yarn comp:docs",
    "build:icons": "yarn build:bootstrap && yarn icons:optimize && yarn icons:react && yarn icons:transpile && yarn icons:css && yarn icons:docs",
    "build:mui-theme": "cp src/mui-theme/index.js ./lib/mui-theme/index.js",

    "placeholder:docs": "babel docs/fds-components/build --out-dir=docs/fds-components/build",
    "build:docs": "echo docs build not ready. see `placeholder:docs` target for more details",

    "styles:min": "NODE_ENV=production postcss src/base-styles/index.css --verbose --output=lib/base-styles/base-styles.min.css --config=./postcss.config.js",
    "styles:full": "postcss src/base-styles/index.css --verbose --output=lib/base-styles/base-styles.full.css --config=./postcss.config.js",
    "styles:docs": "NODE_ENV=base_styles_docs postcss ./lib/base-styles/base-styles.full.css --output=/dev/null",

    "icons:export": "node ./scripts/node/icons/exportFromSketch.js",
    "icons:optimize": "node ./scripts/node/icons/optimize.js",
    "icons:react": "node ./scripts/node/icons/createComponents.js",
    "icons:transpile": "babel ./lib/icons/react --out-dir ./lib/icons/react",
    "icons:css": "cp src/icons/style/icons.css ./lib/icons/style/icons.css",
    "icons:docs": "node ./scripts/node/icons/buildDocs.js",

    "comp:jsx": "babel src --out-dir=lib --ignore=test.jsx --source-maps",
    "comp:css": "postcss src/components/style/index.css -o ./lib/components/style/fds-components.css --config=./postcss.config.js",
    "comp:docs": "styleguidist build",
    "comp:serve": "npx styleguidist server",

    "test": "jest --color",
    "snapshot-update": "jest -u --color",
    "lint": "eslint ./src/ --ext .js,.jsx",
    "precommit": "lint-staged",
    "publish": "echo publish target not ready yet"
  },
  "resolutions": {
    "lodash": "^4.17.11"
  },
  "peerDependencies": {
    "@material-ui/core": "^3.1",
    "@material-ui/icons": "^3",
    "classnames": "^2",
    "prop-types": "^15",
    "react": "^16",
    "react-dom": "^16",
    "react-transition-group": "^2.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@material-ui/core": "^3.1",
    "@material-ui/icons": "^3",
    "@svgr/core": "^4.1.0",
    "@svgr/plugin-jsx": "^4.1.0",
    "@svgr/plugin-svgo": "^4.0.3",
    "@webpack-blocks/assets": "^2.0.0",
    "@webpack-blocks/babel": "^2.0.0",
    "@webpack-blocks/postcss": "^2.0.0",
    "@webpack-blocks/webpack": "^2.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "classnames": "^2",
    "cssnano": "^4.1.0",
    "d3-scale": "^2.1.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-react": "^7.11.1",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.3",
    "handlebars": "^4.0.12",
    "husky": "^1.0.0-rc.13",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "lodash": "^4.17.11",
    "mdcss": "^1.5.2",
    "pascal-case": "^2.0.1",
    "postcss": "^7.0.2",
    "postcss-cli": "^6.0.0",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^5.3.0",
    "prettier": "^1.14.2",
    "prop-types": "^15",
    "react": "^16",
    "react-dom": "^16",
    "react-styleguidist": "^9.0.5",
    "react-transition-group": "^2.6",
    "rimraf": "^2.6.2",
    "style-dictionary": "^2.8.1",
    "stylelint": "^9.5.0",
    "tinycolor2": "^1.4.1",
    "webpack": "^4.17.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cbinsights/form-design-system.git"
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 2 Safari versions",
    "Explorer 11"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.css": [
        "stylelint --fix",
        "git add"
      ],
      "src/**/*.{js,jsx}": [
        "prettier --write",
        "eslint --no-ignore",
        "git add"
      ]
    },
    "ignore": [
      "src/**/*.test.{js,jsx}",
      "src/**/assets/*.css"
    ]
  },
  "version": "1.11.0"
}
