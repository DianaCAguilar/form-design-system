{
  "name": "form-design-system",
  "description": "Form: A design system by CB Insights",
  "author": "CB Insights",
  "license": "MIT",
  "scripts": {
    "serve:comp": "lerna run serve --stream --scope=fds-components",
    "icons:export": "lerna run --scope=fds-icons export",
    "build": "lerna run build --parallel",
    "build:dict": "lerna run --scope=fds-dictionary build",
    "build:styles": "lerna run --scope=fds-styles build",
    "build:comp": "lerna run --scope=fds-components build",
    "build:icons": "lerna run --scope=fds-icons build",
    "build:docs": "babel docs/fds-components/build --out-dir=docs/fds-components/build",
    "build:full": "yarn build:dict && yarn build:icons && yarn bootstrap && yarn build:styles && yarn build:comp && yarn build:docs",
    "test": "jest --color",
    "snapshot-update": "jest -u --color",
    "bootstrap": "yarn lerna bootstrap",
    "lint": "eslint ./packages/ --ext .js,.jsx",
    "precommit": "lint-staged",
    "publish": "lerna publish"
  },
  "resolutions": {
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@material-ui/core": "^3.5.1",
    "@material-ui/icons": "^3.0.1",
    "@svgr/core": "^4.1.0",
    "@svgr/plugin-jsx": "^4.1.0",
    "@svgr/plugin-svgo": "^4.0.3",
    "@webpack-blocks/assets": "^2.0.0",
    "@webpack-blocks/babel": "^2.0.0",
    "@webpack-blocks/postcss": "^2.0.0",
    "@webpack-blocks/webpack": "^2.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "cssnano": "^4.1.0",
    "d3-scale": "^2.1.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.13.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-react": "^7.11.1",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.3",
    "handlebars": "^4.0.12",
    "husky": "^1.0.0-rc.13",
    "jest": "^24.8.0",
    "lerna": "^3.14.1",
    "lint-staged": "^8.1.7",
    "lodash": "^4.17.11",
    "mdcss": "^1.5.2",
    "pascal-case": "^2.0.1",
    "postcss": "^7.0.2",
    "postcss-cli": "^6.0.0",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^5.3.0",
    "prettier": "^1.14.2",
    "prop-types": "^15.6.2",
    "react": "^16.8",
    "react-dom": "^16.3.1",
    "react-styleguidist": "^9.0.5",
    "rimraf": "^2.6.2",
    "style-dictionary": "^2.3.0",
    "stylelint": "^9.5.0",
    "tinycolor2": "^1.4.1",
    "webpack": "^4.17.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cbinsights/form-design-system.git"
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 2 Safari versions",
    "Explorer 11"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "linters": {
      "packages/**/*.css": [
        "stylelint --fix",
        "git add"
      ],
      "packages/**/*.{js,jsx}": [
        "prettier --write",
        "eslint --no-ignore",
        "git add"
      ]
    },
    "ignore": [
      "packages/**/*.test.{js,jsx}",
      "packages/**/assets/*.css"
    ]
  },
  "version": "1.11.0"
}
